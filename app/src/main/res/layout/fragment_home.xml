<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageButton
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_show"
        android:layout_marginTop="180dp"
        />
    <ImageButton
        android:id="@+id/button_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_quiz"
        android:layout_below="@+id/button_show"
        android:layout_marginTop="50dp"
        />
    <ImageButton
        android:id="@+id/button_wordle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_quiz"
        android:src="@drawable/button_wordle"
        android:layout_marginTop="50dp"
        />
</RelativeLayout>
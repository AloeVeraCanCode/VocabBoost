<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/text_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:text="WORD:"
        />
    <TextView
        android:id="@+id/input_word"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_word"
        android:layout_toRightOf="@+id/text_word"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/text_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:text="MEANING:"
        android:layout_below="@+id/text_word"
        />
    <TextView
        android:id="@+id/input_meaning"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_meaning"
        android:layout_toRightOf="@+id/text_meaning"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/text_word"
        />
    <TextView
        android:id="@+id/text_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:text="SENTENCE:"
        android:layout_below="@+id/text_meaning"
        />
    <TextView
        android:id="@+id/input_sentence"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_sentence"
        android:layout_toRightOf="@+id/text_sentence"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/text_meaning"
        />
    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_edit"/>


</RelativeLayout>